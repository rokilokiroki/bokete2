  #container.clearfix
    .main-container.clearfix
      .main-container__menu
        %ul.main-container__menu__list
          %li.active
            %a{:href => "", :target => "_self"}セレクト
          %li
            %a{:href => "", :target => "_self"}
              複数セレクト
